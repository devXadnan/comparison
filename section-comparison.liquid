    },
    {
      "type": "color",
      "id": "table_bg",
      "label": "Table background color"
    },
    {
      "type": "checkbox",
      "id": "divider",
      "label": "t:sections.logo-list.settings.divider.label",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Comparison"
    }
  ],
  "disabled_on": {
    "groups": ["footer", "header", "custom.popups"]
  }
}
{% endschema %}
